@model TrojWebApp.Models.WorkingTimesModel

@{
    ViewData["Title"] = "Skapa åtgärd";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Uppdrag:</label>
                <select name="CaseId"
                        asp-for="CaseId" class="font2"
                        asp-items="@(new SelectList(ViewBag.Cases,"Value","Text"))">
                </select>
                <span asp-validation-for="CaseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Datum:</label>
                <input asp-for="WhenDate" class="font2" />
                <span asp-validation-for="WhenDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ombud:</label>
                <select name="EmployeeId"
                        asp-for="EmployeeId" class="font2"
                        asp-items="@(new SelectList(ViewBag.Employees,"Value","Text"))">
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Typ:</label>
                <select name="TariffTypeId"
                        asp-for="TariffTypeId" class="font2"
                        asp-items="@(new SelectList(ViewBag.TariffTypes,"Value","Text"))">
                </select>
                <span asp-validation-for="TariffTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kontext:</label>
                <input asp-for="Comment" class="font2" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Antal:</label>
                <input asp-for="NumberOfHours" class="font2" />
                <span asp-validation-for="NumberOfHours" class="text-danger"></span>
            </div>
            <div class="form-group">             
                <label class="control-label">Styckkost:</label>
                <input asp-for="Cost" class="font2" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
