@model TrojWebApp.Models.TariffLevelsModel

@{
    ViewData["Title"] = "Skapa tariff";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table border="0" class="table table-condensed table-no-border">
                <tr>
                    <th class="head">Tariff:</th>
                    <td>
                        <select name="TariffTypeId"
                                asp-for="TariffTypeId " class="font2"
                                asp-items="@(new SelectList(ViewBag.TariffTypes,"Value","Text"))">
                        </select>
                        <span asp-validation-for="TariffTypeId" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Nivå:</th>
                    <td>
                        <input asp-for="TariffLevel" size="5" class="font2" />
                        <span asp-validation-for="TariffLevel" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Från:</th>
                    <td>
                        <input asp-for="ValidFrom" class="font2" />
                        <span asp-validation-for="ValidFrom" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Till:</th>
                    <td>
                        <input asp-for="ValidTo" class="font2" />
                        <span asp-validation-for="ValidTo" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Skapa" class="btn btn-primary" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
