@model TrojWebApp.Models.ConfigurationsModel

@{
    ViewData["Title"] = "Ändra konfiguration";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="ConfigurationId" />
                <input type="hidden" asp-for="ConfigKey" />
            </div>
            <table border="0" class="table table-condensed table-no-border">
                <tr>
                    <th class="head">Namn:</th>
                    <th class="head">Värde:</th>
                    <th class="head"></th>
                </tr>
                <tr>
                    <td class="font2">
                        @Html.DisplayFor(model => model.ConfigKey)
                    </td>
                    <td>
                        <input asp-for="ConfigValue" size="60" class="font2" />
                        <span asp-validation-for="ConfigValue" class="text-danger"></span>
                    </td>
                    <td>
                        <input type="submit" value="Spara" class="btn btn-primary" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<div class="row">
    <table class="col-md-12" nowrap>
        <tr>
            <td nowrap style="width: 100%;"></td>
            <td class="navbar-text navbar-right" nowrap>Ändrad: @string.Format("{0:yyyy-MM-dd HH:mm:ss}", Model.Changed) av: @Html.DisplayFor(model => model.ChangedBy)</td>
        </tr>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
