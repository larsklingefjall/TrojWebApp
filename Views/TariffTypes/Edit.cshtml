@model TrojWebApp.Models.TariffTypesModel

@{
    ViewData["Title"] = "Ändra tarifftyp";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="TariffTypeId"/>
            </div>
            <table border="0" class="table table-condensed table-no-border">
                <tr>
                    <th class="head">Typ:</th>
                    <th class="head">Godtyckligt:</th>
                    <th class="head">Osynlig:</th>
                    <th class="head">Backgrundsfärg:</th>
                    <th class="head"></th>
                </tr>
                <tr style="background-color: @Model.BackgroundColor;">
                    <td>
                        <input asp-for="TariffType" size="60" class="font2" />
                        <span asp-validation-for="TariffType" class="text-danger"></span>
                    </td>
                    <td>
                        <div class="checkbox">
                            <label>
                                <input asp-for="NoLevel" />
                            </label>
                        </div>
                    </td>
                    <td>
                        <div class="checkbox">
                            <label>
                                <input asp-for="Invisible" />
                            </label>
                        </div>
                    </td>
                    <td>
                        <input asp-for="BackgroundColor" size="10" class="font2" />
                        <span asp-validation-for="BackgroundColor" class="text-danger"></span>
                    </td>
                    <td>
                        <input type="submit" value="Spara" class="btn btn-primary" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<div class="row">
    <table class="col-md-12" nowrap>
        <tr>
            <td nowrap style="width: 100%;"></td>
            <td class="navbar-text navbar-right" nowrap>Ändrad: @Html.DisplayFor(model => model.Changed) av: @Html.DisplayFor(model => model.ChangedBy)</td>
        </tr>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
