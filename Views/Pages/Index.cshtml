@model IEnumerable<TrojWebApp.Models.Pages3Model>
@{
    ViewData["Title"] = "Huvudsidor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<table border="0" class="table table-condensed table-no-border">
    <tr>
        <td class="subhead" nowrap>@Html.ActionLink("Skapa", "Create")</td>
        <td class="subhead" nowrap>@Html.ActionLink("Undersidor", "Index", "SubPages")</td>
        <td class="subhead" nowrap style="width: 100%;"></td>
    </tr>
</table>

<table class="table table-condensed table-no-border">
    <thead>
        <tr>
            <th class="tablehead2">Title:</th>
            <th class="tablehead2">Kontroller:</th>
            <th class="tablehead2">Aktion:</th>
            <th class="tablehead2">Tips:</th>
            <th class="tablehead2">Position:</th>
            <th class="tablehead2">Barn:</th>
            <th class="tablehead2">Ändrad:</th>
            <th class="tablehead2" nowrap>Ändrad av:</th>
            <th class="tablehead2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="tablefont2" nowrap>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="tablefont2" nowrap>
                    @Html.DisplayFor(modelItem => item.Controller)
                </td>
                <td class="tablefont2" nowrap>
                    @Html.DisplayFor(modelItem => item.Action)
                </td>
                <td class="tablefont2" nowrap>
                    @Html.DisplayFor(modelItem => item.Tip)
                </td>
                <td class="tablefont2" nowrap>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td class="tablefont2" nowrap>
                    @Html.DisplayFor(modelItem => item.HasChild)
                </td>
                <td class="tablefont2" nowrap>
                    @string.Format("{0:yyyy-MM-dd HH:mm:ss}", item.Changed)
                </td>
                <td class="tablefont2" nowrap>
                    @Html.DisplayFor(modelItem => item.ChangedBy)
                </td>
                <td class="tablefont2" nowrap>
                    <a asp-action="Edit" asp-route-id="@item.PageId">Ändra</a>
                </td>
            </tr>
        }
    </tbody>
</table>
