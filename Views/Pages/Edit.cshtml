@model TrojWebApp.Models.PagesModel

@{
    ViewData["Title"] = "Ändra huvudsida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]: @Model.PageId</h1>
<table border="0" class="table table-condensed table-no-border">
    <tr>
        <td class="subhead" nowrap>@Html.ActionLink("Lista", "Index")</td>
        <td class="subhead" nowrap>@Html.ActionLink("Skapa", "Create")</td>
        <td class="subhead" nowrap style="width: 100%;"></td>
    </tr>
</table>
<div class="row">
    <div class="col-sm-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageId" />
            <table border="0" class="table table-condensed table-no-border">
                <tr>
                    <th class="head">Title:</th>
                    <td>
                        <input asp-for="Title" class="font2" size="40" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Kontroller:</th>
                    <td>
                        <input asp-for="Controller" class="font2" size="40" />
                        <span asp-validation-for="Controller" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Filnamn:</th>
                    <td>
                        <input asp-for="FileName" class="font2" size="40" />
                        <span asp-validation-for="FileName" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Tips:</th>
                    <td>
                        <input asp-for="Tip" class="font2" size="40" />
                        <span asp-validation-for="Tip" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Länk:</th>
                    <td>
                        <input asp-for="Link" class="font2" size="40" />
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Position:</th>
                    <td>
                        <input asp-for="Position" class="font2" size="10" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Dölj:</th>
                    <td>
                        <input asp-for="Hidden" class="font2" size="40" />
                        <span asp-validation-for="Hidden" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Barn:</th>
                    <td>
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="HasChild" />
                        </label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="submit" value="Spara" class="btn btn-primary" />
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
