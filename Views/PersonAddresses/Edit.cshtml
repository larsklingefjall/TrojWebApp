@model TrojWebApp.Models.PersonAddressesModel

@{
    ViewData["Title"] = "Ändra adress för " + @ViewBag.PersonName;
}
<table border="0" class="table table-condensed table-no-border">
    <tr>
        <td class="subhead" nowrap><a asp-area="" asp-controller="Persons" asp-action="Details" asp-route-id=@ViewBag.PersonId title="Tillbaka till kontaktuppgifter"><span class='glyphicon glyphicon-home' /></a></td>
        @if (ViewBag.Menu != null)
        {
            @foreach (SubPageMenusChildViewModel menu in ViewBag.Menu)
            {
                <td class="subhead" title="@menu.Tip.ToString()" nowrap>@Html.ActionLink(menu.Title.ToString(), menu.Action.ToString(), menu.Controller.ToString(), new { id = ViewBag.PersonId })</td>
            }
        }
        <td class="subhead" nowrap style="width: 100%;"></td>
    </tr>
</table>
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonId" value="@ViewBag.PersonId" />
            <table border="0" class="table table-condensed table-no-border">
                <tr>
                    <th class="head">C/O:</th>
                    <td>
                        <input asp-for="CareOf" size="40" class="font2" />
                        <span asp-validation-for="CareOf" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Gatuadress:</th>
                    <td>
                        <input asp-for="StreetName" size="30" class="font2" />
                        <span asp-validation-for="StreetName" class="text-danger"></span>
                        <input asp-for="StreetNumber" size="8" class="font2" />
                        <span asp-validation-for="StreetNumber" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Postadress:</th>
                    <td>
                        <input asp-for="PostalCode" size="8" class="font2" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                        <input asp-for="PostalAddress" size="30" class="font2" />
                        <span asp-validation-for="PostalAddress" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Land:</th>
                    <td>
                        <input asp-for="Country" size="40" class="font2" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="head">Giltig:</th>
                    <td>
                        <div class="checkbox">
                            <label>
                                <input asp-for="Valid" />
                            </label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Spara" class="btn btn-primary" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<div class="row">
    <table class="col-md-12" nowrap>
        <tr>
            <td nowrap style="width: 100%;"></td>
            <td class="navbar-text navbar-right" nowrap>Ändrad: @Html.DisplayFor(model => model.Changed) av: @Html.DisplayFor(model => model.ChangedBy)</td>
        </tr>
    </table>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
