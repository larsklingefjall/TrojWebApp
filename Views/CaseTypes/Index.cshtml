@model IEnumerable<TrojWebApp.Models.CaseTypesModel>

@{
    ViewData["Title"] = "Updragstyper";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <table class="table table-condensed table-no-border">
                    <tr><th class="head">Typ:</th></tr>
                    <tr>
                        <td><input name="CaseType" size="60"  class="font2" /></td>
                        <td><input type="submit" value="Skapa" class="btn btn-primary" /></td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-sm-2">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th class="tablehead2">Typ:</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="tablefont2" nowrap>@Html.DisplayFor(modelItem => item.CaseType)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
