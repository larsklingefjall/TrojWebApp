@model IEnumerable<TrojWebApp.Models.CourtsModel>

@{
    ViewData["Title"] = "Domstolar";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-sm-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <table class="table table-condensed table-no-border">
                    <tr><th class="head">Namn:</th></tr>
                    <tr>
                        <td><input name="CourtName" size="60" class="font2" /></td>
                        <td><input type="submit" value="Skapa" class="btn btn-primary" /></td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-sm-2">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th class="tablehead2">Namn:</th>
                    <th class="tablehead2">Adress:</th>
                    <th class="tablehead2">Postadress:</th>
                    <th class="tablehead2">Land:</th>
                    <th class="tablehead2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="tablefont2" nowrap>
                            @Html.DisplayFor(modelItem => item.CourtName)
                        </td>
                        <td class="tablefont2" nowrap>
                            @Html.DisplayFor(modelItem => item.StreetName) @Html.DisplayFor(modelItem => item.StreetNumber)
                        </td>
                        <td class="tablefont2" nowrap>
                            @Html.DisplayFor(modelItem => item.PostalCode) @Html.DisplayFor(modelItem => item.PostalAddress)
                        </td>
                        <td class="tablefont2" nowrap>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td class="tablefont2" nowrap>
                            @Html.ActionLink("Ändra...", "Edit", new { id=item.CourtId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>